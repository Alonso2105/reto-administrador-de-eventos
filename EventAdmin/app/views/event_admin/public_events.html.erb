<section class="hero is-link">
  <div class="hero-body">
    <% if user_signed_in? %>
      <%= link_to "Log Out", destroy_user_session_path, class:"button is-danger is-pulled-right back-button"%>
      <%= link_to "back", events_path, class:"button is-warning is-pulled-right back-button" %>
    <%end%>
    <h1 class="title">
      BrightCoders Events 
    </h1>
  </div>
</section>

<div class="card-columns">
  <% @events.each do |event| %>
    <div class="card">
     <header class="card-header">
        <p class="card-header-title">
          <%= event.title %>
        </p>
      </header>

      <div class="card-content">
        <%= image_tag event.image, class: "event-image" if event.image.attached? %>

        <div class="content">
          <p>Description:
              <br>
             <%= event.description %>
          </p>

          <p>Initial Date:
            <br>
            <%= event.init_date %>
          </p>

          <p>Cost:
            <br>
            <%= event.cost %>
          </p>

          <p>Location:
             <br>
             <%= event.location %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


